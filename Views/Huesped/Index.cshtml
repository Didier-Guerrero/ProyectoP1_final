@model IEnumerable<ProyectoP1_final.Models.Huesped>

@{
    ViewData["Title"] = "Index";
}

<h1>Huespedes</h1>

<p>
    <a asp-action="Create">Añadir huespedes</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreHuesped)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreHuesped)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HuespedID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HuespedID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HuespedID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
